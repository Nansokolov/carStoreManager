@model IEnumerable<carStoreManager.Models.Car>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<style>
    .card-custom {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card-img-left {
        object-fit: cover;
        width: 100%;
        height: 250px;
    }

    .card-body-custom {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .btn-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        padding: 0;
    }
</style>

<div class="my-4">
    @foreach (var item in Model) {
    <div class="card mb-4">
        <div class="row g-0">
            <div class="col-md-4">
                    @if (string.IsNullOrEmpty(item.URL))
                {
                    <img src="/images/defaultCar.jpg" class="img-fluid card-img-left" alt="Item Image">
                }
                else
                {
                        <img src="@item.URL" class="img-fluid card-img-left" alt="Item Image">
                }
            </div>
            <div class="col-md-8">
                <div class="card-body card-body-custom">
                    <div>
                            <h5 class="card-title">@item.ItemName</h5>
                            <p class="card-text"><strong>Price:</strong> $@item.Price</p>
                            <p class="card-text"><strong>Brand:</strong> @item.Brand - @item.CarModel</p>
                            <p class="card-text"><strong>Quantity:</strong> @item.Quantity</p>
                    </div>
                    <div class="d-flex justify-content-end">
                        <a class="btn btn-primary btn-icon me-2" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil"></i></a>
                        <a class="btn btn-secondary btn-icon me-2" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-info-circle"></i></a>
                        <a class="btn btn-danger btn-icon" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }
</div>

<!-- Bootstrap Bundle with Popper -->
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
